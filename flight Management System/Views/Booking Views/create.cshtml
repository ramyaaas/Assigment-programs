@model FlightReservation.Models.Booking

@{
    Layout = "~/Views/Shared/User.cshtml";
}

<h2  style="font-size:25px;color:white;font-weight:bold">Book Your Ticket</h2>
<style>
    body {
        background-image: url('../../FLIGHT.jpg');
        background-size: cover;
        background-repeat: no-repeat;
    }
</style>
@*this line redirects to welcome method in bookings controller*@
@using (Html.BeginForm("Welcome", "Bookings", FormMethod.Post))
{
    @Html.AntiForgeryToken()
<body>
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="font-size:20px;color:white;font-weight:bold">
            @Html.LabelFor(model => model.UserId, "UserId", htmlAttributes: new { @class = "control-label col-md-2" })
            @*dropdown for userid is taken from passenger*@
            <div class="col-md-10">
                @Html.DropDownList("UserId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
            </div>
        </div>
        @*dropdown for flightid is taken from scheduked flights*@
        <div class="form-group" style="font-size:20px;color:white;font-weight:bold">
            @Html.LabelFor(model => model.FlightId, "FlightId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FlightId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FlightId, "", new { @class = "text-danger" })
            </div>
        </div>
        @*dropdown source is taken from scheduked flights*@
        <div class="form-group" style="font-size:20px;color:white;font-weight:bold">
            @Html.LabelFor(model => model.source, "source", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("source", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.source, "", new { @class = "text-danger" })
            </div>
        </div>
        @*dropdown for destination is taken from scheduked flights*@
        <div class="form-group" style="font-size:20px;color:white;font-weight:bold">
            @Html.LabelFor(model => model.destination, "destination", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("destination", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.destination, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="font-size:20px;color:white;font-weight:bold">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Book" class="btn btn-primary btn-lg" onclick="Myfunction1()" />

            </div>
        </div>
    </div>
</body>
}
@*function to get a alert message when the ticket booking is successsfull*@
<script>
    function Myfunction1() {
        alert("Your Booking Is Successfull");
    }
</script>

    



