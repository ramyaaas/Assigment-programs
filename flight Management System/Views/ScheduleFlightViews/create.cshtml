@model FlightReservation.Models.scheduleflight

@{

    Layout = "~/Views/Shared/View.cshtml";

}
<style>
    body {
        background-image: url('../../FLIGHT.jpg');
        background-size: cover;
        background-repeat: no-repeat;
    }
</style>
<h2 style="font-size:25px;color:white;font-weight:bold"><b>Schedule Flight</b></h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<body>
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="font-size:20px;color:white;font-weight:bold">
            @Html.LabelFor(model => model.scheduleFlightNumber, "scheduleFlightNumber", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("scheduleFlightNumber", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.scheduleFlightNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="font-size:20px;color:white;font-weight:bold">
            @Html.LabelFor(model => model.SourceAirport, "SourceAirport", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("SourceAirport", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SourceAirport, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="font-size:20px;color:white;font-weight:bold">
            @Html.LabelFor(model => model.DestinationAirport, "DestinationAirport", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("DestinationAirport", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DestinationAirport, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="font-size:20px;color:white;font-weight:bold">
            @Html.LabelFor(model => model.DepartureTime, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DepartureTime, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DepartureTime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="font-size:20px;color:white;font-weight:bold">
            @Html.LabelFor(model => model.ArrivalTime, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ArrivalTime, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ArrivalTime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="font-size:20px;color:white;font-weight:bold">
            @Html.LabelFor(model => model.TotalCost, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TotalCost, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TotalCost, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Schedule" class="btn btn-default" />
            </div>
        </div>
    </div>
</body>
        }
