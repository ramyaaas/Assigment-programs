@model FlightReservation.Models.FlightDetail

@{
   
    Layout = "~/Views/Shared/View.cshtml";
}
<h2 style="font-size:25px;color:white;font-weight:bold"><b>Enter Flight  Details</b></h2>
<style>
    body {
        background-image: url('../../FLIGHT.jpg');
        background-size: cover;
        background-repeat: no-repeat;
    }
</style>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
<body>
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="font-size:20px;color:white;font-weight:bold">
            @Html.LabelFor(model => model.FlightNumber, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FlightNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FlightNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="font-size:20px;color:white;font-weight:bold">
            @Html.LabelFor(model => model.FlightModel, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FlightModel, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FlightModel, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="font-size:20px;color:white;font-weight:bold">
            @Html.LabelFor(model => model.FlightCarrier, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FlightCarrier, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FlightCarrier, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="font-size:20px;color:white;font-weight:bold">
            @Html.LabelFor(model => model.SeatCapacity, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SeatCapacity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SeatCapacity, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="font-size:20px;color:white;font-weight:bold">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-primary btn-lg" />
            </div>
        </div>
    </div>
</body>
}



