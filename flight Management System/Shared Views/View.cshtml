
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Flight System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            background-color: darkseagreen
        }
    </style>
</head>
<body>


    <div>

        <h1 class="text-center" style="font-size:60PX">Flight Management System</h1>
    </div>
    <nav class=" navbar navbar-inverse">
        <div>


            <ul class="nav navbar-nav">
                <li style="font-size:x-large">@Html.ActionLink("Home", "Index", "Home")</li>
                <li style="font-size:x-large">@Html.ActionLink("Add Flight", "Create", "FlightDetails")</li>
                <li style="font-size:x-large">@Html.ActionLink("Schedule Flight", "Create", "scheduleflights")</li>
                <li style="font-size:x-large">@Html.ActionLink("View Flight  ", "Index", "FlightDetails")</li>
                <li style="font-size:x-large"> @Html.ActionLink("View Scheduled Flight", "Index", "scheduleflights")</li>

                <li style="font-size:x-large">@Html.ActionLink("Search Available Flights", "Search", "FlightDetails")</li>
                <li style="font-size:x-large">@Html.ActionLink("Search Scheduled Flights", "Search", "scheduleflights")&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</li>

                <li style="font-size:x-large">@Html.ActionLink("Admin", "admin", "Home")</li>
            </ul>


        </div>

    </nav>

    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p style="color:white;background-color:black;height:25px;font-size:20px"><bold>&copy; @DateTime.Now.Year -My Flight Reservation System</bold></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
